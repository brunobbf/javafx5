      <Label layoutX="27.0" layoutY="27.0" text="Calculate Sum">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumber1" layoutX="27.0" layoutY="69.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="27.0" layoutY="112.0" promptText="Second Number" />
      <Button fx:id="btSum" layoutX="27.0" layoutY="165.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
      <Label layoutX="27.0" layoutY="212.0" text="Result =" />
      <Label fx:id="labelResult" layoutX="81.0" layoutY="212.0" />
